{
  "name": "santa-app",
  "version": "0.0.1",
  "description": "A simple Node app built on Express, instantly up and running.",
  "main": "server.js",
  "scripts": {
    "start": " node index.js",
    "start:server": "node -r dotenv/config server/index.js",
    "start:client": "vite --port 3000",
    "start:prod": "npm run build && node server/index.js",
    "build": "tsc && vite build",
    "test:server": "jest -c ./jest.config.js",
    "test:client": "vitest -c ./vitest.config.ts",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@reduxjs/toolkit": "^2.2.7",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.14",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
    "react-redux": "^9.1.2",
    "uuid": "^10.0.0",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@types/node": "^22.5.1",
    "@types/react": "^18.0.34",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^6.2.0",
    "jest": "^29.7.0",
    "jsdom": "^25.0.0",
    "nodemon": "^3.1.4",
    "typescript": "^5.0.4",
    "vite": "^4.2.1",
    "vitest": "^2.0.5"
  },
  "engines": {
    "node": ">=16.x"
  },
  "repository": {
    "url": "https://github.com/alj-devops/santa-app"
  },
  "license": "MIT",
  "keywords": [
    "node",
    "glitch",
    "express"
  ]
}
